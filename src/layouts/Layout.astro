---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Curated products for modern women" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gradient min-h-screen">
		<div class="ornamental-bg fixed inset-0 z-0"></div>
		<header class="bg-white/10 backdrop-blur-md shadow-sm sticky top-0 z-10">
			<nav class="max-w-md mx-auto px-4 py-3">
				<div class="flex flex-col items-center">
					<a href="/" class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 font-display">TrendSpotter</a>
					<div class="flex space-x-4 mt-2">
						<a href="/" class="text-sm text-gray-200 hover:text-white transition-colors">Daily Picks</a>
						<a href="/trending" class="text-sm text-gray-200 hover:text-white transition-colors">Trending</a>
						<a href="/monthly" class="text-sm text-gray-200 hover:text-white transition-colors">Monthly Finest</a>
					</div>
				</div>
			</nav>
		</header>
		<div class="relative z-1">
			<slot />
		</div>
		<footer class="bg-white/10 backdrop-blur-md mt-12 py-6 relative z-1">
			<div class="max-w-md mx-auto px-4">
				<p class="text-center text-sm text-gray-300">Â© 2024 TrendSpotter. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
	}
	html {
		font-family: 'Inter', system-ui, sans-serif;
		color: #fff;
	}
	.font-display {
		font-family: 'Playfair Display', serif;
	}
	.ornamental-bg {
		background: 
			radial-gradient(circle at 0% 0%, rgba(255, 182, 255, 0.1), transparent 40%),
			radial-gradient(circle at 100% 0%, rgba(192, 132, 252, 0.1), transparent 40%),
			radial-gradient(circle at 100% 100%, rgba(255, 182, 255, 0.1), transparent 40%),
			radial-gradient(circle at 0% 100%, rgba(192, 132, 252, 0.1), transparent 40%),
			repeating-linear-gradient(45deg, 
				rgba(255, 255, 255, 0.03) 0px, 
				rgba(255, 255, 255, 0.03) 1px,
				transparent 1px, 
				transparent 10px
			),
			repeating-linear-gradient(-45deg, 
				rgba(255, 255, 255, 0.03) 0px, 
				rgba(255, 255, 255, 0.03) 1px,
				transparent 1px, 
				transparent 10px
			);
		background-color: #1a1a2e;
		opacity: 0.97;
	}
	.bg-gradient {
		background: linear-gradient(135deg, #1a1a2e 0%, #2a2a4e 100%);
	}
</style>